<h1>Listing groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td class="group-name"><%= group.name %></td>
        <td><%= link_to 'Show', group, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_group_path(group), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

